    // Simple typing effect
    let typingTimeout;
    function typeText(text){
      clearTimeout(typingTimeout);
      typedEl.textContent = '';
      let i=0;
      function step(){
        if(i<=text.length){
          typedEl.textContent = text.slice(0,i);
          i++;
          typingTimeout = setTimeout(step, 28 + Math.random()*20);
        }
      }
      step();
    }

    document.getElementById('next').addEventListener('click', ()=> showPage(idx+1));
    document.getElementById('prev').addEventListener('click', ()=> showPage(idx-1));
    window.addEventListener('keydown', (e)=>{ if(e.key==="ArrowRight") showPage(idx+1); if(e.key==="ArrowLeft") showPage(idx-1); });

