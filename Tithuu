    function resizeCanvas(){ canvas.width = stage.clientWidth; canvas.height = stage.clientHeight; canvas.style.width = stage.clientWidth + 'px'; canvas.style.height = stage.clientHeight + 'px'; }
    window.addEventListener('resize', resizeCanvas); resizeCanvas();
    const ctx = canvas.getContext('2d');
    let confs = [];
    function spawnConfetti(x,y){
      for(let i=0;i<24;i++){
        confs.push({x:x,y:y, vx:(Math.random()-0.5)*8, vy:(-6+Math.random()*2), r:6+Math.random()*8, c:['#ff5c8a','#ffd166','#a0e7e5','#7afcff'][Math.floor(Math.random()*4)], life:80 + Math.random()*60 });
      }
    }
    function burst(pageIdx){
      spawnConfetti(canvas.width*0.5, canvas.height*0.35);
    }
    function confLoop(){
      ctx.clearRect(0,0,canvas.width,canvas.height);
      for(let i=confs.length-1;i>=0;i--){
        let p = confs[i];
        p.x += p.vx; p.y += p.vy; p.vy += 0.28; p.life -=1; p.r *= 0.995;
        ctx.fillStyle = p.c; ctx.beginPath(); ctx.ellipse(p.x,p.y,p.r,p.r*0.8,0,0,Math.PI*2); ctx.fill();
        if(p.life<0 || p.y>canvas.height+40) confs.splice(i,1);
      }
      requestAnimationFrame(confLoop);
    }
    confLoop();

    // initial
    showPage(0);

    // gentle floating hearts on photo
    const photo = document.getElementById('photo');
    let floatTimer;
    function floatEffect(){
      photo.style.transform = `translateY(${Math.sin(Date.now()/800)*6}px)`;
      floatTimer = requestAnimationFrame(floatEffect);
    }
    floatEffect();

    // small autoplay heart pops occasionally
    setInterval(()=>{ const h = document.querySelectorAll('.heart'); h[Math.floor(Math.random()*h.length)].style.transform='scale(1.12)'; setTimeout(()=>{ h.forEach(x=>x.style.transform='scale(1)') },420); }, 2200);

    // touch support: swipe left/right
    let touchStartX = null;
    stage.addEventListener('touchstart', e=>{ touchStartX = e.changedTouches[0].clientX; });
    stage.addEventListener('touchend', e=>{ if(touchStartX===null) return; const dx = e.changedTouches[0].clientX - touchStartX; if(dx < -40) showPage(idx+1); if(dx > 40) showPage(idx-1); touchStartX=null; });

    // If photo is missing, replace with placeholder
    photo.onerror = function(){ photo.src = 'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="600" height="800"><rect width="100%" height="100%" fill="%23010a14"/><text x="50%" y="50%" fill="%23ffffff" font-size="26" text-anchor="middle" dy="0.3em">Tithi ржПрж░ ржЫржмрж┐ ржПржЦрж╛ржирзЗ рж░рж╛ржЦрзБржи (tithi.jpg)</text></svg>'; };

  </script>
</body>
</html>


